{
  "name": "EXT-Pir",
  "version": "2.0.0",
  "rev": "240913",
  "description": "GA EXT-PIR plugin",
  "main": "EXT-Pir.js",
  "scripts": {
    "dependencies": "installer/dependencies.sh -d 'python3 python-is-python3 python3-gpiozero gpiod libgpiod2 libgpiod-dev'",
    "presetup": "npm run dependencies && installer/preinstall.sh",
    "setup": "npm prune",
    "postsetup": "installer/postinstall.sh -m -r",
    "update": "installer/update.sh",
    "preinstall": "echo ⚠ npm install will be deprecated on next release!.",
    "install": "npm run setup",
    "postinstall": "echo ⚠ On next release, Please use: npm run setup",
    "rebuild": "installer/rebuild.sh",
    "reset": "git reset --hard",
    "clean": "rm -rf node_modules package-lock.json",
    "lint": "eslint *.js installer/*.js components/*.js --config eslint.config.js",
    "lint:fix": "eslint *.js installer/*.js components/*.js --config eslint.config.js --fix",
    "test": "npm run lint",
    "test:minify": "cd installer && node minify.js"
  },
  "keywords": [
    "MMM-GoogleAssistant",
    "magic mirror",
    "module",
    "sensor",
    "motion detection",
    "PIR",
    "EXT",
    "GoogleAssistant"
  ],
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@electron/rebuild": "^3.6.0",
    "esbuild": "^0.23.1",
    "glob": "^10.4.5",
    "nan": "^2.20.0",
    "node-libgpiod": "^0.4.6",
    "python-shell": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@stylistic/eslint-plugin": "^1.8.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bugsounet/EXT-Pir"
  },
  "author": "bugsounet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bugsounet/EXT-Pir/issues"
  },
  "homepage": "https://wiki.bugsounet.fr/en/EXT-Pir"
}
